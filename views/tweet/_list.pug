for tweet in tweets
  div(class="card tweet-element mt-2" data-tweet-id=tweet._id)
    .card-body.d-flex.justify-content-between.align-items-center
      .flex-fill #{tweet.content}
      .actions
        a(class="btn btn-sm btn-primary px-2 me-2" href=`/tweet/edit/${tweet._id}`) Edit
        button(class="btn btn-sm btn-danger px-2" data-action="delete") Delete
